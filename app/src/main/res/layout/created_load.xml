<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_currentload"
        android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:weightSum="10">

        <ImageView

            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/location_red" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCLLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Indore"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Type :-"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvCLMaterialType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Steel"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Contact :-"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvCLPickUpContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="123 palaciya"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Delivery Contact :-"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvCLDeliveryContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="456 Saket"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quntity :-"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvQuntity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10 ton"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/morevertical"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:src="@drawable/more_vert" />

            <LinearLayout
                android:id="@+id/llCounter"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:gravity="center"

                >

                <TextView
                    android:id="@+id/tvCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>