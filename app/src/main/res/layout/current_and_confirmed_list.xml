<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llCurrentLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Current Load"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/background_currentload"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <ImageView

                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/location_red" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCLLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indore"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/text_view"
                        android:text=" To " />

                    <TextView
                        android:id="@+id/tvCLLocationDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bhopal"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type :-"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvCLMaterialType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Steel"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Contact :-"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvCLPickUpContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="123 palaciya"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Contact :-"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvCLDeliveryContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="456 Saket"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/morevertical"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:src="@drawable/more_vert" />

                <LinearLayout
                    android:id="@+id/llCounter"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:gravity="center"

                    >

                    <TextView
                        android:id="@+id/tvCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llConfirmLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCurrentLoad"
        android:background="@drawable/color"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvConfirmLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Confirm Load"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/background_currentload"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/userlogo"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/user_logo" />

                <ImageView

                    android:id="@+id/ivLocation"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:src="@drawable/location_red" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTransporterName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Transporter Name"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indore"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/text_view"
                        android:text=" To " />

                    <TextView
                        android:id="@+id/tvLocationDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bhopal"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_view"
                        android:text="Type :- " />

                    <TextView
                        android:id="@+id/tvMaterialType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Steel"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_view"
                        android:text="Pickup Contract :- " />

                    <TextView
                        android:id="@+id/tvPickUpContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="123"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_view"
                        android:text="Delevery Contact :- " />

                    <TextView
                        android:id="@+id/tvDeliveryContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="456"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_view"
                        android:text="Amount :- " />

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="10000"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_view"
                        android:text="Progress Status :- " />

                    <TextView
                        android:id="@+id/tvProgressStatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Complete"
                        android:textSize="18sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:src="@drawable/more_vert" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>